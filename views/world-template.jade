doctype html
html
  head
    link(rel='stylesheet', href='style.css')
    script(src='script.js')
  body(style='background-color:#ddd')
    style.
      @font-face {
      font-family: 'bariol';
      src: url("http://www.kano.me/fonts/bariol_bold-webfont.eot");
      src: url("http://www.kano.me/fonts/bariol_bold-webfont.eot?#iefix") format('embedded-opentype'),
      url("http://www.kano.me/fonts/bariol_bold-webfont.woff") format('woff'),
      url("http://www.kano.me/fonts/bariol_bold-webfont.ttf") format('truetype'),
      url("http://www.kano.me/fonts/bariol_bold-webfont.svg#bariol_boldbold") format('svg');
      font-weight: bold;
      font-style: normal;
      }
      @font-face {
      font-family: 'bariol';
      src: url("http://www.kano.me/fonts/bariol_regular-webfont.eot");
      src: url("http://www.kano.me/fonts/bariol_regular-webfont.eot?#iefix") format('embedded-opentype'),
      url("http://www.kano.me/fonts/bariol_regular-webfont.woff") format('woff'),
      url("http://www.kano.me/fonts/bariol_regular-webfont.ttf") format('truetype'),
      url("http://www.kano.me/fonts/bariol_regular-webfont.svg#bariol_regularregular") format('svg');
      font-weight: normal;
      font-style: normal;
      }
      @font-face {
      font-family: 'bariol';
      src: url("http://www.kano.me/fonts/bariol_light-webfont.eot");
      src: url("http://www.kano.me/fonts/bariol_light-webfont.eot?#iefix") format('embedded-opentype'),
      url("http://www.kano.me/fonts/bariol_light-webfont.woff") format('woff'),
      url("http://www.kano.me/fonts/bariol_light-webfont.ttf") format('truetype'),
      url("http://www.kano.me/fonts/bariol_light-webfont.svg#bariol_regularregular") format('svg');
      font-weight: 100;
      font-style: normal;
      }
      * {
      font-family: 'Bariol';
      }
    div(style='width:600px; margin: 0 auto;')
      div(style='background:#444 url("http://art.kano.me/assets/layout/draw-logo@2x.png") no-repeat center center/200px; height:40px; width:100%; margin:0; padding:10px 0')
      div(style='padding:20px 60px; width:480px; margin:0 auto; background:#fff;')
        a(href='http://art.kano.me/pixelhack' style='text-decoration:none;')
          img(src='http://art.kano.me/assets/challenges/images/world_covers/pixelhack@2x.png', style='width:480px; display:block; margin:20px auto; border-radius:4px 4px 4px 4px;')
        p(style='text-align:center; font-family:"Bariol"; font-size:24px;')
          | #{message}
        p(style='text-align:center; font-family:"Bariol"; font-size:18px;') &mdash; #{name}